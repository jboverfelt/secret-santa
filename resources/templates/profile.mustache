<div class="container">
  <div class="row">
    <h3>Settings</h3>
  </div>
  <hr />
  <div class="col-md-4">
    <div class="row">
      <h4>Password Change</h4> 
      <form action="/settings/password/change" method="post" role="form">
        <div class="form-group">
          <input type="text" class="form-control" id="old" name="old" placeholder="Current Password" autofocus />
        </div>
        <div class="form-group">
          <input type="text" class="form-control" id="new" name="new" placeholder="New Password" />
        </div>
        <div class="form-group">
          <input type="text" class="form-control" id="confirm" name="confirm" placeholder="Confirm New Password" />
        </div>
        {{{token}}}
        <button type="submit" class="btn btn-primary submit-btn">Submit</button>
      </form> 
    </div>
  </div>
</div>
