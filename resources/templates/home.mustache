<div class="container">
  <div class="row">
    <div class="col-md-6">
      <div class="panel panel-success">
        <div class="panel-heading">
          My Wishlist
        </div>
        <div class="panel-body">
          {{#my}}
            {{{text}}}
          {{/my}}
        </div>
        <div class="panel-footer">
          <a href="/wishlist/edit" role="button" class="btn btn-default btn-xs">
            <span class="glyphicon glyphicon-pencil"></span> Edit
          </a>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="panel panel-danger">
        <div class="panel-heading">
          Child's Wishlist
        </div>
        <div class="panel-body">
          {{#child}}
            {{{text}}}
          {{/child}}
        </div>
        <div class="panel-footer">
          {{#child}}
          <p>Child: {{name}}</p>
          {{/child}}
        </div>
      </div>
    </div>
  </div>
</div>
